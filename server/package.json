{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "main.ts",
  "scripts": {
    "dev": "node ../scripts/hot-reload.js server ./main.ts",
    "build:test": "tsup --config tsup.dev.ts && pnpm run copy-env:test",
    "build": "tsup --config tsup.prod.ts && pnpm run copy-env:prod",
    "copy-env:test": "node ../scripts/copy-env.js test",
    "copy-env:prod": "node ../scripts/copy-env.js",
    "dev:after:build-test": "node ./.test/main.js",
    "dev:after:build": "node ./dist/main.js",
    "start": "pnpm run build && node ./dist/main.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.9.0",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.48.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "typescript": "~5.8.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.15",
    "tsup": "^8.5.0"
  }
}
